<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smusings.rollofthedie"
    android:versionCode="4"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme"
        android:debuggable="false">
        <activity
            android:name="com.smusings.rollofthedie.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smusings.rollofthedie.DieRollFragment"
            android:label="@string/title_activity_die_roll_fragment" >
        </activity>
        <activity
            android:name="com.smusings.rollofthedie.RollListFragment"
            android:label="@string/title_activity_roll_list_fragment" >
        </activity>
        <activity
            android:name="com.smusings.rollofthedie.About"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name=".MagicLifeCounter"
            android:label="@string/app_name"
            android:parentActivityName=".SetUpActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".setUpActivity"/>
        </activity>
        <activity android:name=".DieRoll"
            android:label="@string/app_name">
            </activity>
    </application>

</manifest>
