<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/player1buttons">
    <TextView
    android:id="@+id/PlayerHealth"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="@color/LightCyan"
    android:gravity="center"
    android:fontFamily="sans-serif-condensed"
    android:textSize="32dp"/><TextView
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    android:background="@color/Black"
    android:text="_"/>
    <TextView
        android:id="@+id/poison_health"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/ForestGreen"
        android:textSize="30dp"
        android:text="0"
        android:gravity="center"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/Black"
        android:text="_"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/minusOne"
            android:text="-1"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:background="@color/DarkBlue"
            android:layout_margin="5dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/plusOne"
            android:text="+1"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:background="@color/DarkBlue"
            android:layout_margin="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ><Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/minusFive"
        android:text="-5"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:background="@color/DarkRed"
        android:layout_margin="5dp"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/plusFive"
            android:text="+5"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:background="@color/DarkRed"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/poisonOne"
            android:text="P +1"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:background="@color/Green"
            android:layout_margin="5dp"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/poisonMinOne"
            android:text="P -1"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:background="@color/Green"
            android:layout_margin="5dp"/>

    </LinearLayout>
</LinearLayout>