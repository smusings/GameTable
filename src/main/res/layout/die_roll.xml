<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">
    <fragment
        android:name="com.smusings.rollofthedie.DieRollFragment"
        android:id="@+id/DieRollFrag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:layout="@layout/activity_die_roll_fragment" />
    <fragment
        android:name="com.smusings.rollofthedie.RollListFragment"
        android:id="@+id/RollListFrag"
        android:layout_below="@id/DieRollFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/roll_list_item"/>
</RelativeLayout>
